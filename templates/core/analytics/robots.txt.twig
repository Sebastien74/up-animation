{% if robots.disallow and not app.request.get('preview') %}
User-agent: *
Disallow: /
{% else %}
User-agent: *
{% for url in robots.noIndexes %}
{% if url.uri is defined and url.uri %}
Disallow: {{ url.uri }}
{% endif %}
{% else %}
Allow: /
{% endfor %}
{% endif %}
{% if sitemap %}
Sitemap: {{ sitemap }}
{% endif %}